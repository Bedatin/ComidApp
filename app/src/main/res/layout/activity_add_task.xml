<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    android:gravity="center"
    tools:context=".copiaEOI.AddTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/etComida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comida" />

        <CheckBox
            android:id="@+id/cbDupli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duplicable" />

        <EditText
            android:id="@+id/etTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rgTipo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbPasta"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasta" />

                <RadioButton
                    android:id="@+id/rbLegumbres"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legumbres" />

                <RadioButton
                    android:id="@+id/rbCarne"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carne" />

                <RadioButton
                    android:id="@+id/rbPescado"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pescado" />

                <RadioButton
                    android:id="@+id/rbOtros"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Otros" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rgTiempo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbComida"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comida" />

                <RadioButton
                    android:id="@+id/rbCena"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cena" />

                <RadioButton
                    android:id="@+id/rbAmbas"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Ambas" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddtask"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_animado"
            android:text="AÃ±adir" />

    </LinearLayout>


</LinearLayout>