<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".toolbarActivities.ComidaInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Original"
            android:textColor="#010"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@color/Negro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvComida"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Pechugas"
                android:textColor="#010"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTipo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Carne"
                android:textColor="#010"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTiempo"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Ambas"
                android:textColor="#010"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_delete" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Nuevo"
            android:textColor="#010"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@color/Negro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etComida"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#010"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etTipo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#010"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etTiempo"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#010"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnDelete2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_delete" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSubeCambio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_animado"
        android:text="Guardar"
        android:textColor="@color/Blanco" />

</LinearLayout>